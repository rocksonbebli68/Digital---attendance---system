#include <iostream>
using namespace std;

class Student {
public:
    string name;
    string indexNumber;

    void registerStudent() {
        cout << "Enter Student Name: ";
        cin >> name;

        cout << "Enter Index Number: ";
        cin >> indexNumber;
    }

    void displayStudent() {
        cout << "Name: " << name << endl;
        cout << "Index Number: " << indexNumber << endl;
        cout << "----------------------" << endl;
    }
};

Student students[100];
int studentCount = 0;

int main() {

    int choice;

    do {
        cout << "\n===== DIGITAL ATTENDANCE SYSTEM =====\n";
        cout << "1. Register Student\n";
        cout << "2. View Students\n";
        cout << "3. Exit\n";
        cout << "Enter your choice: ";
        cin >> choice;

        if(choice == 1) {
            students[studentCount].registerStudent();
            studentCount++;
            cout << "Student Registered Successfully!\n";
        }

        else if(choice == 2) {
            if(studentCount == 0) {
                cout << "No students registered yet.\n";
            } else {
                for(int i = 0; i < studentCount; i++) {
                    students[i].displayStudent();
                }
            }
        }

    } while(choice != 3);

    cout << "Exiting program...\n";
    return 0;
}
class Session {
public:
    string courseCode;
    string date;
    string startTime;
    int duration;

    void createSession() {
        cout << "Enter Course Code: ";
        cin >> courseCode;

        cout << "Enter Date (YYYY-MM-DD): ";
        cin >> date;

        cout << "Enter Start Time: ";
        cin >> startTime;

        cout << "Enter Duration (Hours): ";
        cin >> duration;
    }

    void displaySession() {
        cout << "\nSession Details\n";
        cout << "Course: " << courseCode << endl;
        cout << "Date: " << date << endl;
        cout << "Time: " << startTime << endl;
        cout << "Duration: " << duration << " hrs\n";
    }
};
void markAttendance(Student students[], int count) {

    if(count == 0){
        cout << "No students available.\n";
        return;
    }

    for(int i = 0; i < count; i++) {

        cout << "\nStudent: " << students[i].name << endl;
        cout << "1. Present\n2. Absent\n3. Late\nChoice: ";

        int choice;
        cin >> choice;

        if(choice == 1) attendance[i] = "Present";
        else if(choice == 2) attendance[i] = "Absent";
        else attendance[i] = "Late";
    }
}
int main() {

    loadStudents();

    int choice;

    do {
        cout << "\n===== DIGITAL ATTENDANCE SYSTEM =====\n";
        cout << "1. Register Student\n";
        cout << "2. View Students\n";
        cout << "3. Create Session\n";
        cout << "4. Mark Attendance\n";
        cout << "5. View Report\n";
        cout << "6. Save Data\n";
        cout << "7. Exit\n";
        cout << "Enter choice: ";
        cin >> choice;

        if(choice == 1) {
            students[studentCount].registerStudent();
            studentCount++;
        }

        else if(choice == 2) {
            for(int i = 0; i < studentCount; i++) {
                students[i].displayStudent();
            }
        }

        else if(choice == 3) {
            currentSession.createSession();
            sessionCreated = true;
        }

        else if(choice == 4) {
            if(sessionCreated)
                currentSession.markAttendance(students, studentCount);
            else
                cout << "Create session first.\n";
        }

        else if(choice == 5) {
            currentSession.showReport(students, studentCount);
        }

        else if(choice == 6) {
            saveStudents();
            saveAttendance(studentCount);
            cout << "Data Saved!\n";
        }

    } while(choice != 7);

    return 0;
}
